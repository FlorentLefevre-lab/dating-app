# Base de donn√©es PostgreSQL
DATABASE_URL=postgresql://florent:password123@localhost:5432/dating_app

# NextAuth v5
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-secret-key-minimum-32-characters

# OAuth Google (console.developers.google.com)
GOOGLE_CLIENT_ID=your-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-google-client-secret

# OAuth Facebook (developers.facebook.com)
FACEBOOK_CLIENT_ID=your-facebook-app-id
FACEBOOK_CLIENT_SECRET=your-facebook-app-secret

# Email configuration (Gmail recommand√©)
EMAIL_SERVER_HOST=smtp.gmail.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=your-email@gmail.com
EMAIL_FROM=your-email@gmail.com
EMAIL_SERVER_PASSWORD=your-gmail-app-password

# Cloudinary (cloudinary.com)
NEXT_PUBLIC_CLOUDINARY_CLOUD_NAME=your-cloud-name
NEXT_PUBLIC_CLOUDINARY_UPLOAD_PRESET=your-upload-preset
NEXT_PUBLIC_CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_KEY=your-api-key
CLOUDINARY_API_SECRET=your-api-secret

# Stream.io (getstream.io) - pour chat et vid√©o
STREAM_API_KEY=your-stream-api-key
STREAM_API_SECRET=your-stream-secret

# Firebase (console.firebase.google.com) - pour notifications
FIREBASE_PROJECT_ID=your-project-id
FIREBASE_PRIVATE_KEY=your-private-key
FIREBASE_CLIENT_EMAIL=your-client-email

# Redis Configuration
# Standard Redis (for local development or self-hosted)
REDIS_URL=redis://localhost:6379

# Upstash Redis (for serverless/production - alternative to REDIS_URL)
# Get credentials from: https://console.upstash.com/
UPSTASH_REDIS_REST_URL=
UPSTASH_REDIS_REST_TOKEN=

# Environment
NODE_ENV=development

# Photo limits (par type de compte)
NEXT_PUBLIC_MAX_PHOTOS_FREE=6
NEXT_PUBLIC_MAX_PHOTOS_PREMIUM=20
NEXT_PUBLIC_PHOTOS_PER_PAGE=8

